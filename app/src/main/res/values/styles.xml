<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomText">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="TabBarText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/montserrat_semibold_600</item>
    </style>
    <style name="Buttons" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerRadius">30dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TabName" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TabButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">20sp</item>
        <item name="android:layout_height">20sp</item>
    </style>
    <style name="TabLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingHorizontal">5sp</item>
        <item name="android:paddingVertical">16sp</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Widget.App.Button.BorderColored" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

</resources>