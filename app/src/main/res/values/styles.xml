        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">1dp</item>
