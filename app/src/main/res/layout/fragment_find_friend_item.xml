<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_friend_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/person"
        android:background="@drawable/rounded_shape"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/friend_profile_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buddy_bench"
            android:fontFamily="@font/montserrat_medium_500" />

        <TextView
            android:id="@+id/tv_friend_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="@color/md_theme_light_outline"
            android:fontFamily="@font/montserrat_regular_400" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/md_theme_light_primary"
        android:text="@string/add"
        android:textColor="@color/md_theme_light_background"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat_semibold_600"
        />


</LinearLayout>