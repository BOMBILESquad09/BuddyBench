<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="6dp"
    android:layout_marginTop="13dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@color/tennis_sport"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="24dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/circle_shape"
            card_view:layout_constraintBottom_toTopOf="@+id/card_reservation"
            card_view:layout_constraintEnd_toStartOf="@+id/invite_text"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:tint="@color/md_theme_light_background" />

        <TextView
            android:id="@+id/invite_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/montserrat_semibold_600"
            android:text="Gerry invites you to play a game!"
            android:textColor="@color/md_theme_light_background"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/profile_picture"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/profile_picture"
            card_view:layout_constraintTop_toTopOf="@+id/profile_picture" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_reservation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            card_view:cardBackgroundColor="@color/tennis_sport"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="0dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/profile_picture">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                card_view:layout_constraintBottom_toTopOf="@+id/accept_btn"
                card_view:layout_constraintHorizontal_bias="0.5"
                card_view:layout_constraintTop_toBottomOf="parent">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_semibold_600"
                    android:text="@string/court_name"
                    android:textColor="@color/md_theme_light_background"
                    android:textSize="20sp"
                    card_view:layout_constraintBottom_toTopOf="@+id/address_layout"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintVertical_chainStyle="spread" />

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    card_view:layout_constraintBottom_toTopOf="@+id/day_layout"
                    card_view:layout_constraintStart_toStartOf="@+id/textView6"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView6">

                    <ImageView
                        android:id="@+id/position"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/location"
                        card_view:tint="@color/md_theme_light_background" />

                    <TextView
                        android:id="@+id/card_reservation_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="@string/court_address"
                        android:textColor="@color/md_theme_light_background"
                        android:textSize="17sp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/day_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="@+id/address_layout"
                    card_view:layout_constraintTop_toBottomOf="@+id/address_layout">

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/calendar"
                        card_view:tint="@color/md_theme_light_background" />

                    <TextView
                        android:id="@+id/card_reservation_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="19/05/2023"
                        android:textColor="@color/md_theme_light_background"
                        android:textSize="17sp">

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/hours_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    card_view:layout_constraintBottom_toBottomOf="@+id/day_layout"
                    card_view:layout_constraintStart_toEndOf="@+id/day_layout">

                    <ImageView
                        android:id="@+id/hours"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/round_access_time_24"
                        card_view:tint="@color/md_theme_light_background" />

                    <TextView
                        android:id="@+id/card_reservation_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:fontFamily="@font/montserrat_medium_500"
                        android:text="14:00 - 15:00"
                        android:textColor="@color/md_theme_light_background"
                        android:textSize="17sp">

                    </TextView>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_shape_card"
            android:drawableEnd="@drawable/confirm"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_bold_700"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="Accept"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/decline_btn"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/card_reservation" />

        <TextView
            android:id="@+id/decline_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:background="@drawable/rounded_shape_card"
            android:drawableEnd="@drawable/close"
            android:drawablePadding="8dp"
            android:drawableTint="@color/error"
            android:fontFamily="@font/montserrat_bold_700"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:text="Decline"
            android:textSize="16sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/accept_btn"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/accept_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
